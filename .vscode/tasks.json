    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFI Scratch Org",
            "type": "shell",
            "command":"bash",
            "args": [
                "./scripts/shell/build-sratch-org.sh"
            ],
            "group": "build",
            "problemMatcher":[],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Install Vlocity to default org",
            "type": "shell",
            "command":"bash",
            "args": [
                "sf project deploy start --metadata-dir managed_packages/vlocity_package --wait 180"
            ],
            "group": "build",
            "problemMatcher":[],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        }
        
    ]
